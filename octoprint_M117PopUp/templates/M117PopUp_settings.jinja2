<h4>M117PopUp Settings</h4>
<form class="form-horizontal" id="settings_plugin_M117PopUp_form">
	<div class="control-group">
		<label class="control-label">{{ _('Message Type') }}</label>
		<div class="controls">
			<select data-bind="options: msgTypes,optionsText: 'name',optionsValue: 'value',value: settingsViewModel.settings.plugins.M117PopUp.msgType"></select>
        </div>
    </div>
	<div class="control-group">
		<label class="control-label">{{ _('Auto Close') }}</label>
		<div class="controls">
			<input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.M117PopUp.autoClose">
        </div>
    </div>
</form>